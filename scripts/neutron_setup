neutron router-create router1
neutron net-create private
neutron subnet-create private 10.10.10.0/24 --name=private_subnet
neutron net-create vnf_in
neutron subnet-create private 11.11.11.0/24 --name=vnf_in_sub
neutron net-create vnf_out
neutron subnet-create private 12.12.12.0/24 --name=vnf_out_sub
neutron net-create public --router:external True \
  --provider:network_type gre --provider:segmentation_id 42
neutron subnet-create public --name public_subnet 10.12.0.0/24
neutron router-interface-add router1 private_subnet
neutron router-interface-add router1 vnf_in_sub
neutron router-interface-add router1 vnf_out_sub
neutron router-gateway-set router1 public